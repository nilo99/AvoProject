<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/itemImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"
            android:layout_marginRight="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do utilizadore"
            android:textColor="@color/black"
            android:id="@+id/item_firstname"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/itemImage"
            android:layout_toRightOf="@+id/itemImage"
            android:layout_alignParentTop="true"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes"
            android:textColor="@color/light_white"
            android:id="@+id/item_detalhes"
            android:layout_toEndOf="@+id/itemImage"
            android:layout_toRightOf="@+id/itemImage"
            android:layout_below="@+id/item_firstname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MarcaÃ§oes: 1"
            android:textColor="@color/black"
            android:id="@+id/marca"
            android:layout_toEndOf="@+id/itemImage"
            android:layout_toRightOf="@+id/itemImage"
            android:layout_below="@+id/itemImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Estrelas"
            android:textColor="@color/azul_avo"
            android:id="@+id/stars"
            android:paddingTop="16dp"
            android:layout_toEndOf="@+id/itemImage"
            android:layout_toRightOf="@+id/itemImage"
            android:layout_below="@+id/marca"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7,00/hora"
            android:textColor="@color/black"
            android:id="@+id/Preco"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingLeft="70dp"
            android:layout_toEndOf="@+id/stars"
            android:layout_toRightOf="@+id/stars"
            android:layout_below="@+id/marca"
            android:textSize="15sp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>