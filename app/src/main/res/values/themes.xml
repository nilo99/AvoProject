<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Avo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
    <item name = "colorControlActivated">@color/night_mode</item>
        <item name = "colorSwitchThumbNormal">#FFFFFF</item>
        <item name = "android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name = "colorControlActivated">@color/Notifications</item>
        <item name = "colorSwitchThumbNormal">#FFFFFF</item>
        <item name = "android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="Theme.AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="bottomSheetStyle">@drawable/btshape</item>
    </style>



    <style name="PrivateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name = "colorControlActivated">@color/private_account</item>
        <item name = "colorSwitchThumbNormal">#FFFFFF</item>
        <item name = "android:colorForeground">#99FFFFFF</item>
    </style>

</resources>